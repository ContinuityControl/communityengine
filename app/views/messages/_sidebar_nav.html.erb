<%= box do %>
<h3><%= :links.l %>
</h3>
<ul class='message_nav'>
  <li class="inbox<%= @user.unread_messages? ? '_new': '' %>">

        <%=  link_to :inbox.l, user_messages_path(@user) %>

        <%=  "(#{@user.unread_message_count})" if @user.unread_messages? %>

  </li>
  <li class='sent'>  <%= link_to :sent_messages.l, user_messages_path(@user, :mailbox => :sent) %>
</li>
  <li class='compose'>  <%= link_to :compose.l, new_user_message_path(@user) %>
</li>
</ul>
<% end %>

