<div class='yui-b sidebar'>
    <%= box do %>
  <h3>  <%= :links.l %>
</h3>
  <ul class='checks'>
    <li>    <%= link_to :view_all_my_photos.l, user_photos_path(current_user) %>
</li>
    <li>    <%= link_to :new_photo.l, new_user_photo_path(current_user) %>
</li>
    <li>    <%= link_to :new_album.l, new_user_album_path(current_user) %>
</li>
  </ul>
  <% end %>

</div>
<div id='yui-main'>
  <div class='yui-b'>
        <%= box do %>
    <h3>    <%= :albums.l %>
</h3>
    <table border="0" width="100%">

      <thead>
        <tr>
          <th>          <%= :title.l %>
</th>
          <th>          <%= :preview.l %>
</th>
          <th>          <%= :created_at.l %>
</th>
          <th>          <%= :actions.l %>
</th>
        </tr>
      </thead>
      <tbody>
        <%  @albums.each do |album| %>
        <tr>
          <td>          <%= link_to album.title, user_album_path(current_user,album) %>
</td>
          <td>
            <%  if album.photos[0] %>
                        <%= link_to image_tag( album.photos[0].photo.url(:thumb), :size => "50x50"), user_photo_path(current_user, album.photos[0]) %>

            <% end %>
            <%  if album.photos[1] %>
                        <%= link_to image_tag( album.photos[1].photo.url(:thumb), :size => "50x50"), user_photo_path(current_user, album.photos[1]) %>

            <% end %>
            <%  if album.photos[2] %>
                        <%= link_to image_tag( album.photos[2].photo.url(:thumb), :size => "50x50"), user_photo_path(current_user, album.photos[2]) %>

            <% end %>
          </td>
          <td>
            <abbr title="<%= album.created_at %>">
            <%= album.created_at.strftime("%Y/%m/%d") %>
</abbr>
          </td>
          <td>
                        <%=  link_to :edit.l, edit_user_album_path(current_user,album) %>

                        <%=  " | " %>

                        <%=  link_to :add_photos.l, new_user_album_photo_path(current_user,album) %>

                        <%=  " | " %>

                        <%=  link_to :destroy.l, user_album_path(current_user,album), :confirm => :delete_album_and_photos.l, :method => :delete %>

          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class='pagination'>    <%= paginating_links(@albums,{:name => "page_albums"}) if @albums.total_pages > 1 %>
</div>
    <h3>    <%= :not_assigned_photos.l %>
</h3>
    <div class='yui-u box' id='photos'>
      <%  @photos_no_albums.each do |photo| %>
            <%=  link_to image_tag( photo.photo.url(:thumb), :class => "polaroid"), user_photo_path(current_user, photo) %>

      <% end %>
      <div class='pagination'>      <%= paginating_links @photos_no_albums if @photos_no_albums.total_pages > 1 %>
</div>
    </div>
    <% end %>

  </div>
</div>
