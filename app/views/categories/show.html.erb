<% @meta = { :description => "#{@category.name} posts.",:keywords => "#{@category.name}"} %>
<% @section = @category.name %>
<div class='yui-b'>
  <%= box do %>
    <% if logged_in? %>
      <h3 class='signup'> <%= :have_something_to_contribute.l %> </h3>
      <ul class='list checks'>
        <li>
          <%= link_to @category.display_new_post_text() || :write_new_post.l(:category=>@category.name), new_user_post_path({:user_id => current_user, 'post[category_id]' => @category.id}) %>
        </li>
      </ul>
    <% else %>
      <h3 class='signup'><%= @category.display_new_post_text() || :write_new_post.l(:category=>@category.name) %></h3>
      <ul class='list checks'>
        <li>
          <a href="<%= signup_url %>" title="<%= :sign_up_for_a_.l + " " + AppConfig.community_name + " " + :account.l %>">
            <%= :sign_up_for_an_account.l %>
          </a>
          <br>
          <small>
            <%= :have_an_account.l %>
            <a href="<%= login_url %>" title="<%= :log_in_to_your.l + " " + AppConfig.community_name + " " + :account.l %>">
              <%= "&raquo; ".html_safe + :login.l %>
            </a>
          </small>
          </br>
        </li>
      </ul>
    <% end %>
  <% end %>

  <%= box :class => "alt" do %>
    <h3><%= :top_writers.l %></h3>
    <% @active_users.each do |user| %>
      <%= render :partial => "users/sidebar_user", :locals => {:user => user} %>
    <% end %>
  <% end %>

  <%= box :class => "alt" do %>
    <h3> <%= :popular_category.l(:name => @category.name) %> </h3>
    <ul class='list page'>
      <% @popular_posts.each do |post| %>
        <%= render :partial => 'posts/sidebar_post', :locals => {:post => post} %>
      <% end %>
    </ul>
  <% end %>

</div>
<div id='yui-main'>
  <div class='yui-b'>
    <%= box :class => "hfeed" do %>
      <h3>
        <%= :show_category.l :category => @category.name %>
      </h3>

      <ul class='subnav'>
        <li> <%= link_to :recent.l, category_path(@category), {:class => (params[:popular] ? '' : 'active')} %> </li>
        <li> <%= link_to :popular.l, category_path(@category, :popular => 'DESC'), {:class => (params[:popular] ? 'active' : '')} %> </li>
      </ul>
      <%= render :partial => 'posts/post', :collection => @posts %>

      <% if @posts.total_pages > 1 %>
        <div class='pagination'> <%= paginating_links @posts, :link_to_current_page => true %></div>
      <% end %>
    <% end %>

  </div>
</div>
