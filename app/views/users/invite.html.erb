<script src='http://www.plaxo.com/css/m/js/util.js' type='text/javascript'></script>
<script src='http://www.plaxo.com/css/m/js/basic.js' type='text/javascript'></script>
<script src='http://www.plaxo.com/css/m/js/abc_launcher.js' type='text/javascript'></script>
<% content_for :sidebar do %>
<%=  rounded_box :div_class => 'bluegray-bg', :header => :spread_the_word.l do %>
<p>
    <%= :invite_message.l(:site => AppConfig.community_name) %>

</p>
<p>
    <%= :people_who_sign_up_using_your_invitation_will_automatically_be_added_as_your_friends.l %>

</p>
<% end %>

<% end %>
<%=  rounded_box :div_class => 'bluegray-bg', :header => :invite_your_friends_to_join.l do %>
<%=  form_for(:invitation, :url => user_invitations_path(:user_id => @user.id ), :html => {:class => "MainForm"} ) do |f| %>
<div class='h4_right'>
  <a href="#" onclick="showPlaxoABChooser('invitation_email_addresses', '/base/plaxo'); return false;">

    <img alt="Add from my address book" src="http://www.plaxo.com/images/abc/buttons/add_button.gif" />

  </a>
</div>
<label for='email_addresses'>
    <%= :enter_e_mail_addresses.l %>

  <em>  <%= :comma_separated.l %>
</em>
</label>
<%=  f.text_area :email_addresses , :rows => "5" %>

<label for='message'><%= :write_a_message.l %>
</label>
<%=  f.text_area :message, :rows => "5" %>

<p>
    <%=  submit_tag :send_invitations.l %>

    <%= :or.l %>

    <%=  link_to :cancel.l, user_path(@user) %>

</p>
<% end %>

<% end %>

