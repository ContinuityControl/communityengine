<%  if current_user && current_user.admin? %>
<%=  rounded_box :div_class => 'bluegray-bg' do %>
<h3>
    <%= :admin_controls.l %>

</h3>
<%=  link_to( "&raquo; ".html_safe + :assume_user_id.l, assume_user_path(@user) ) %>

<br />
<%=  link_to( "&raquo; ".html_safe + :delete_this_user.l, user_path(@user), {:method => :delete, :confirm => :are_you_sure_you_want_to_permanently_delete_this_user.l} ) %>

<br />
<%=  link_to( "&raquo; ".html_safe + "#{:toggle.l} #{:featured_writer.l}", toggle_featured_user_path(@user), {:method => :put} ) %>

<br />
<%=  link_to( "&raquo; ".html_safe + "#{:assign_role.l}: #{@user.moderator? ? :member.l : :moderator.l}", toggle_moderator_user_path(@user), {:method => :put} ) %>

<% end %>

<% end %>
<%= render :partial => 'forums/community_nav' %>

<%=  rounded_box :div_class => 'bluegray-bg' do %>
<div class='hentry' id='profile_details'>
  <h3>
        <%=  link_to @user.login, user_path(@user) %>

        <%=  content_tag(:small, "(#{:featured_writer.l})") if @user.featured_writer? %>

  </h3>
  <% if current_user and current_user.can_request_friendship_with(@user) %>
    <%=  add_friend_link(@user) %>

  <% end %>
  <div class='centered'>
    <% if @is_current_user %>
    <% if @user.avatar %>
        <%=  @user.vendor ? "<div class='right_corner'><div class='community_pro'></div></div>".html_safe : '' %>

        <%=  @user.featured_writer ? "<div class='right_corner'><div class='featured_writer'></div></div>".html_safe : '' %>

        <%=  link_to :profile_photo_crop.l, crop_profile_photo_user_path(@user) %>

    <%  else %>
        <%= :no_profile_photo.l %>

        <%=  link_to :click_here_to_upload_one.l, edit_user_path(@user) %>

    <% end %>
    <br />
    <% end %>
        <%=  image_tag( @user.avatar_photo_url(:thumb), :class => "polaroid") %>

  </div>
  <h4>  <%= :my_details.l %>
</h4>
  <div class='vcard author'>
    <ul>
      <li class='update'>
        <a href="<%= user_path(@user) %>" rel="bookmark">

          <abbr class="published" title="<%= @user.created_at %>">

                        <%= :member_since.l+" #{I18n.l(@user.created_at, :format => :short_published_date)}" %>

          </abbr>
        </a>
      </li>
      <li class='view'>
                <%= :profile_views.l %>

                <%=  "(#{@user.view_count})" %>

      </li>
      <%  if @user.offerings.any? %>
      <li class='skills'>      <%= :my_skills.l+": #{@user.offerings.collect{|o| link_to o.skill.name, skill_url(o.skill) }.join(', ')}" %>
</li>
      <% end %>
      <%  if @user.tags.any? %>
      <li class='tags'>      <%= ( :my_tags.l+": #{@user.tags.collect{|t| link_to t.name, tag_url(t) }.join(", ")}" ).html_safe %>
</li>
      <% end %>
      <%  if @user.metro_area %>
      <li class='geo'>      <%= link_to( @user.full_location, users_path(:metro_area_id => @user.metro_area_id, :state_id => @user.state_id, :country_id => @user.country_id ) ) %>
</li>
      <% end %>
      <%  if current_user %>
      <li class='compose'>      <%= link_to(:send_me_a_message.l, new_user_message_path(current_user, :to=>@user.login)) %>
</li>
      <% end %>
    </ul>
  </div>
  <div class='clear'></div>
</div>
<% end %>

