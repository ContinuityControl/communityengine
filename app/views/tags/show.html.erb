<% content_for :sidebar do %>
<%= render :partial => 'forums/community_nav' %>

<%=  rounded_box :div_class => 'bluegray-bg' do %>
<h3 class='tags'><%= :related_tags.l %>
</h3>
<ul>
  <%  tag_cloud @related_tags, %w(nube1 nube2 nube3 nube4 nube5) do |name, css_class| %>
  <%  css_class = css_class + (name.eql?(params[:id]) ? " selected": "") %>
  <li>  <%= link_to h(name), tag_path(name), :class => css_class %>
</li>
  <% end %>
</ul>
<h6 class='all'><%= link_to :all_tags.l, tags_path %>
</h6>
<% end %>

<% end %>
<%=  rounded_box :div_class => 'bluegray-bg' do %>
<h3>
  <%  if params[:type] %>
    <%=  (params[:type].downcase.pluralize + '_tagged').l %>

  <%  else %>
    <%=  :items_tagged.l %>

  <% end %>
  <%  @tags.each do |tag| %>
    <%=  link_to h(tag.name), tag_path(tag) %>

  <% end %>
</h3>
<%  if @posts.any? %>
<% unless params[:type] %>
<h4><%= :posts.l %>
</h4>
<ul class='list page'>
  <%  @posts.each do |post| %>
  <li>
        <%=  link_to( truncate(post.display_title, :length => 75), user_post_path(post.user, post), :title => :by.l+" #{post.user.login}" ) %>

    <p class='post_excerpt'>    <%= truncate_words(post.post, :length => 350) %>
</p>
  </li>
  <% end %>
</ul>
<h6 class='all'><%= link_to :all_posts_tagged.l(:tag_name => @tags_raw), show_tag_type_path(:id => @tags_raw, :type => 'Post') unless params[:type] %>
</h6>
<% else %>
<%= box :class => 'first_alt hfeed' do %>
<%=  render :partial => 'posts/post', :collection => @posts %>

<% end %>

<% end %>
<% end %>
<%  if @photos.any? %>
<h4><%= :photos.l(:count => @photos.size) %>
</h4>
<%  @photos.each do |photo| %>
<%=  link_to image_tag(photo.photo.url(:thumb), :title => "#{photo.description} ("+:uploaded_by.l+" #{photo.user.login})", :class => "polaroid"), user_photo_path(photo.user, photo) %>

<% end %>
<h6 class='all'><%= link_to :all_photos_tagged.l(:tag_name => @tags_raw), show_tag_type_path(:id => @tags_raw, :type => 'Photo') unless params[:type] %>
</h6>
<% end %>
<%  if @users.any? %>
<h4><%= :users.l %>
</h4>
<%  @users.each do |user| %>
<%=  link_to image_tag(user.avatar_photo_url(:thumb), :class => "polaroid"), user_path(user), :title => user.login %>

<% end %>
<h6 class='all'><%= link_to :all_users_tagged.l(:tag_name => @tags_raw), show_tag_type_path(:id => @tags_raw, :type => 'User') unless params[:type] %>
</h6>
<% end %>
<%  unless @clippings.empty? %>
<h4><%= :clippings.l %>
</h4>
<%  @clippings.each do |clipping| %>
<a href="<%= h user_clipping_url(clipping.user, clipping)  %>">

  <img class="polaroid clipping" src="<%= h clipping.image_uri %>" style="width:108px" />

</a>
<% end %>
<h6 class='all'><%= link_to :all_clippings_tagged.l(:tag_name => @tags_raw), show_tag_type_path(:id => @tags_raw, :type => 'Clipping') unless params[:type] %>
</h6>
<% end %>
<%  unless @discussions.empty? %>
<h4><%= :discussions.l %>
</h4>
<%  @discussions.each do |topic| %>
<p>
    <%=  image_tag "clearbits/comment.png", :class => "icon", :title => topic.title, :plugin => "community_engine" %>

  <a href="<%= h forum_topic_path(topic.forum, topic)  %>">

        <%=  topic.title %>

  </a>
</p>
<% end %>
<h6 class='all'><%= link_to :all_discussions_tagged.l(:tag_name => @tags_raw), show_tag_type_path(:id => @tags_raw, :type => 'Discussion') unless params[:type] %>
</h6>
<% end %>
<%  if @pages %>
<div class='pagination'><%= paginating_links @pages, :params => params if @pages.total_pages > 1 %>
</div>
<% end %>
<% end %>

