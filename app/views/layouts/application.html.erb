<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
  <head>
    <link href="<%= application_url %>favicon.ico" rel="shortcut icon" />

    <meta content='text/html;charset=utf-8' http-equiv='Content-Type' />
    <title><%= page_title %></title>
    <% if @meta %>
      <% @meta.each do |key| %>
        <meta name="<%= key[0] %>" content="<%= key[1]" %> />
      <% end %>
    <% end %>
    <%= render :partial => "shared/scripts_and_styles" %>

    <% if @rss_title && @rss_url %>
      <%= auto_discovery_link_tag(:rss, @rss_url, {:title => @rss_title}) %>

    <% end %>
  </head>
  <body>
    <div class="yui-t<%= @sidebar_left ? 3 : 6 %>" id="doc2">

      <%= render :partial => "shared/header" %>

      <div id='bd'>
        <%= render :partial => "shared/messages" %>
        <%= @content_for_layout %>
      </div>
      <div id='ft'>
        <% if show_footer_content? %>
          <div class='yui-gc' id='footer_content'>
            <%= image_tag 'spinner.gif' %>
            <%= :loading_recent_content.l %>
          </div>
          <%= javascript_tag do %>
            <%= remote_function(:update => "footer_content", :url => { :controller => 'base', :action => 'footer_content' }) %>
          <% end %>
        <% end %>
      </div>
      <div id='CommunityFooter'>
        <ul>
          <li>
            <a href="<%= application_url %>" title="<%= AppConfig.community_name + ' ' + :home.l" %>>
              <%= :home.l %>
            </a>
          </li>
          <% if !logged_in? %>
            <li>
              <%= link_to :log_in.l , login_path %>
            </li>
          <% else %>
            <li>
              <a href="<%= logout_url %>" title="<%= :log_out_of_your.l + ' ' + AppConfig.community_name + ' ' + :account.l %>>
                <%= :log_out.l %>
              </a>
            </li>
          <% end %>
          <% Page.find(:all).each do |page| %>
            <% if (logged_in? || page.page_public) %>
              <li><%= link_to page.title, pages_path(page) %></li>
            <% end %>
          <% end %>
          <% if @rss_title && @rss_url %>
            <li id='rss'><%= link_to :rss.l, @rss_url, {:title => @rss_title} %></li>
          <% end %>
        </ul>
        <p>
          <%= :community_tagline.l %>
        </p>
      </div>
    </div>
  </body>
</html>
