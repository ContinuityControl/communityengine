<div id='yui-main'>
  <div class='yui-b'>
        <%= box do %>
    <h3>    <%= :edit_page.l %>
</h3>
        <%=  error_messages_for :page %>

        <%=  form_for(:page, :url => admin_page_path(@page), :html => {:method => :put, :class => "MainForm", :id => 'post_form'}) do |f| %>
        <%= render :partial => 'form', :locals => {:f => f} %>

    <p>
            <%=  submit_tag :update.l %>

            <%= :or.l %>

            <%=  link_to :cancel_and_go_back_to_pages.l, admin_pages_path %>

    </p>
    <p>
            <%= link_to "#{image_tag 'icons/delete.png'} "+:delete_this_page.l, admin_page_path(@page), :method => :delete, :confirm => :are_you_sure_you_want_to_delete_this_page.l %>

    </p>
    <% end %>

    <% end %>

  </div>
</div>
