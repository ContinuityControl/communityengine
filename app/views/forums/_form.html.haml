#forum_name
  = form.label :title, :title.l
  = form.text_field :name, :class => "primary"

  = form.label :position, :position.l
  = form.text_field :position, :size => 5

  %fieldset
    %legend="Group Configuration"
    = form.label :community_group_id, "Belongs to Group?"
    = form.collection_select :community_group_id, CommunityGroup.find(:all, :order => :name), :id, :name, {:include_blank => true}

    = form.label :is_committee, "Committee?"
    = form.check_box :is_committee

  %label
    =:tags.l
    %em="(#{:optional_keywords_describing_this_forum_separated_by_commas.l})"
  = text_field_tag 'tag_list', @forum.tag_list, {:autocomplete => "off", :size => 35}
  #tag_list_auto_complete.auto_complete
  = auto_complete_field 'tag_list', {:url => { :controller => "tags", :action => 'auto_complete_for_tag_name'}, :tokens => [','] }

#forum_descripion
  %label= :description.l
  = form.text_area :description, :rows => 7
