<div class='yui-b sidebar'>
    <%=  render :partial => 'shared/admin_nav' %>

</div>
<div id='yui-main'>
    <%= box :class => "yui-b" do %>
  <h3>
        <%=  AppConfig.community_name %>

        <%=  :members.l %>

  </h3>
    <%=  form_tag admin_users_url, :class => 'MainForm' do %>
  <label>  <%= :user_login.l %>
</label>
    <%=  text_field_tag 'login', params['login'] %>

  <label>  <%= :user_e_mail.l %>
</label>
    <%=  text_field_tag 'email', params['email'] %>

  <p>
    <input type="submit" value="Search Users" />

  </p>
  <% end %>

  <% if @users.total_pages > 1 %>
  <div class='pagination'>  <%= paginating_links @users, :link_to_current_page => true %>
</div>
  <% end %>
  <table border='0' cellpadding='0' cellspacing='0' width='100%'>
    <tr>
      <th>      <%= :login.l %>
</th>
      <th>      <%= :e_mail.l %>
</th>
      <th>      <%= :status.l %>
</th>
      <th>      <%= :actions.l %>
</th>
    </tr>
    <%  @users.each do |user| %>
    <tr id="user_<%= user.id %>">

      <td>
                <%=  link_to h(user.login), user_path(user) %>

      </td>
      <td>
                <%=  h user.email %>

      </td>
      <td>
                <%=  user.active? ? :active.l : :inactive.l %>

      </td>
      <td>
                <%=  link_to( :assume_id.l , assume_user_path(user) ) %>

                <%=  (" | " + link_to(:activate.l, :controller => "/admin", :action => "activate_user", :id => user.id)) unless user.active? %>

                <%=  link_to(image_tag('icons/delete.png'), {:remote => true, :url => user_path(user), :method => :delete, :success => visual_effect(:fade, "user_#{user.id}"), :confirm => "Are you sure you want to permanently delete this user"} ) %>

      </td>
    </tr>
    <% end %>
  </table>
  <% if @users.total_pages > 1 %>
  <div class='pagination'>  <%= paginating_links @users, :link_to_current_page => true %>
</div>
  <% end %>
  <% end %>

</div>
