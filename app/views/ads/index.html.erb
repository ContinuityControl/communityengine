<% content_for :sidebar do %>
<%=  render :partial => 'shared/admin_nav' %>

<% end %>
<%=  rounded_box :div_class => 'white-fg bluegray-bg' do %>
<div class='right'><%= link_to :new_ad.l, new_ad_path %>
</div>
<h3><%= :ads.l %>
</h3>
<table width='100%'>
  <tr>
    <th>    <%= :name.l %>
</th>
    <th>    <%= :frequency.l %>
</th>
    <th>
            <%= :published.l %>

      ?
    </th>
    <th>    <%= :run.l %>
</th>
    <th>    <%= :location.l %>
</th>
    <th>&nbsp;</th>
  </tr>
  <%  for ad in @ads %>
  <tr>
    <td>    <%= link_to h(ad.name), ad_path(ad) %>
</td>
    <td>    <%= h ad.frequency %>
</td>
    <td>    <%= h ad.published? %>
</td>
    <td>    <%= h ad.time_constrained? ? "#{ad.start_date.to_formatted_s(:short)}-#{ad.end_date.to_formatted_s(:short)}" : "n/a" %>
</td>
    <td>    <%= h ad.location %>
</td>
    <td colspan="3">

            <%=  link_to :show.l, ad_path(ad) %>

      |
            <%=  link_to :edit.l, edit_ad_path(ad) %>

      |
            <%=  link_to :destroy.l, ad_path(ad), :confirm => :are_you_sure.l, :method => :delete %>

    </td>
  </tr>
  <% end %>
</table>
<% end %>

